---
"extends":
  - "defaults"

"rules":
  "arrow-parens": ["error", "as-needed"]
  "no-var": "error"
  "no-console": 0
  "object-shorthand": ["error", "properties"]
  "prefer-arrow-callback": "error"
  "strict": 1
  "quotes": [1, "single", {"avoidEscape": true, "allowTemplateLiterals": true}]

"env":
  "es6": true
  "mocha": true
  "node": true